<div class="flag-header">
  <div class="grid-container">
    <a href="/" class="flag-logo">FLAGTEST.NZ</a>
    <label class="flag-wind js-wind-toggle" for="flag-wind-input">
      <span class="flag-wind-text">Raging southerly wind:</span>
      <div class="flag-wind-toggle">
        <div class="flag-wind-toggle-white"></div>
        <span class="flag-wind-toggle-on flag-wind-toggle-text">on</span>
        <span class="flag-wind-toggle-off flag-wind-toggle-text">off</span>
      </div>
    </label>
  </div>
</div>
<div class="flag-canvas js-flag-canvas"></div>
<% if(!fromUpload){ %>
